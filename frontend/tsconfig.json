{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@go/*": ["wailsjs/go/*"],
			"@src/*": ["src/*"]
		},
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true
	},
	"include": ["wailsjs/**/*", "src/**/*"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
